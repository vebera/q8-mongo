# MongoDB Production Configuration
# Copy this file to .env and update with your values

# MongoDB Root User
MONGO_USER=root
MONGO_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# MongoDB Port
MONGO_PORT=27017

# WiredTiger Cache Size (GB)
# Recommended: 60-70% of available RAM
# CCX43 (48GB RAM): 32GB
# CCX53 (64GB RAM): 40GB
MONGO_CACHE_SIZE_GB=32

# Resource Limits
MONGO_MEMORY_LIMIT=50G
MONGO_CPU_LIMIT=12
MONGO_MEMORY_RESERVATION=32G
MONGO_CPU_RESERVATION=4

# Storage Paths (absolute paths on host)
MONGO_DATA_DIR=/var/lib/mongodb
MONGO_CONFIG_DIR=/var/lib/mongodb-config
MONGO_LOG_DIR=/var/log/mongodb
MONGO_BACKUP_DIR=/var/backups/mongodb

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM (cron format)

# MongoDB Express (optional, for development)
MONGO_EXPRESS_ENABLED=false
MONGO_EXPRESS_PORT=8081
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=CHANGE_THIS

# Docker Platform
DOCKER_PLATFORM=linux/amd64
